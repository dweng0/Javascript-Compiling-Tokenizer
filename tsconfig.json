{
    "compileOnSave": false,
    "compilerOptions": {
      "alwaysStrict": true,
      "outDir": "./dist",
      "baseUrl": "src",
      "sourceMap": true,
      "declaration": false,
      "moduleResolution": "node",
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowJs": true,
      "checkJs": true,
      "target": "es5",
       "lib": [
        "es2016",
        "dom"
      ] 
    },
     "include":[
        "src/**/*"
      ]
  }
  